<Page x:Class="PointOfSale.ComboSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ComboSelection">
    <WrapPanel>
        <WrapPanel.Style>
            <Style TargetType="Button">
                <Setter Property="MinWidth" Value="140"/>
                <Setter Property="MinHeight" Value="200"/>
            </Style>

        </WrapPanel.Style>
        <Button Content="Dino-Nuggets" Height="100" Width="100"/>
        <Button Content="Bronwurst combo"/>
        <Button Content="Staeakosarus combo"/>
        <Button Content="T-Rex king Burger Combo"/>
        <Button Content="Prehistoric PB&amp;j combo"/>
        <Button Content="Pterodactyl Wings Combos" Width="89" />
        <Button Content="Veloci-Wrap Combo" Height="102"/>
    </WrapPanel>

</Page>
